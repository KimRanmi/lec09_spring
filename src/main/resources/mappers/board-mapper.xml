<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="boardMapper" >
	<select id="selectBoardList" resultType="com.gn.spring.board.model.vo.Board"
	parameterType="com.gn.spring.board.model.vo.Board">
		SELECT * 
		FROM `board`
		<if test='search_text != null and search_text.equals("") == false'>
			<where>
			<!-- <if test='board_title != null and board_title.equals("") == false'>
				board_title LIKE CONCAT('%',#{board_title},'%')
			</if> -->
			<choose>
				<when test='search_type != null and search_type == 1'>
					board_title LIKE CONCAT('%',#{search_text},'%')
				</when>
				<when test='search_type != null and search_type == 2'>
					board_content LIKE CONCAT('%',#{search_text},'%')
				</when>
				<otherwise>
					board_title LIKE CONCAT('%',#{search_text},'%')
					OR board_content LIKE CONCAT ('%',#{search_text},'%')
				</otherwise>
			</choose>
		</where>
		</if>
		<!-- <where>
			<if test='board_title != null and board_title.equals("") == false'>
				AND board_title LIKE CONCAT ('%',#{board_title},'%')
			</if>
			
		</where> -->
		LIMIT #{limitPageNo}, #{numPerPage}
	</select>
	
	
	<select id="selectBoardCount" resultType="int" parameterType="com.gn.spring.board.model.vo.Board">
		select count(*)
		from `board`
		<if test='search_text != null and search_text.equals("") == false'>
			<where>
			<!-- <if test='board_title != null and board_title.equals("") == false'>
				board_title LIKE CONCAT('%',#{board_title},'%')
			</if> -->
			<choose>
				<when test='search_type != null and search_type == 1'>
					board_title LIKE CONCAT('%',#{search_text},'%')
				</when>
				<when test='search_type != null and search_type == 2'>
					board_content LIKE CONCAT('%',#{search_text},'%')
				</when>
				<otherwise>
					board_title LIKE CONCAT('%',#{search_text},'%')
					OR board_content LIKE CONCAT ('%',#{search_text},'%')
				</otherwise>
			</choose>
		</where>
		</if>
	</select>
	<insert id="insertBoard" parameterType="com.gn.spring.board.model.vo.Board">
		insert into `board` 
		(board_title,board_content,ori_thumbnail,new_thumbnail) 
		values (#{board_title},#{board_content},#{ori_thumbnail},#{new_thumbnail})
	</insert>
	<select id="selectBoardOne" parameterType="_int" resultType="com.gn.spring.board.model.vo.Board">
		select * from `board`
		<where>
			board_no = #{board_no}
		</where>
	</select>
	<update id="updateBoard" parameterType="com.gn.spring.board.model.vo.Board">
		update `board` set 
		board_title = #{board_title} , board_content = #{board_content}
		<if test="ori_thumbnail != null">
		, ori_thumbnail = #{ori_thumbnail}, new_thumbnail = #{new_thumbnail}
		</if>
		<where>
		board_no = #{board_no}
		</where> 
	</update>
	<delete id="deleteBoard" parameterType="com.gn.spring.board.model.vo.Board">
		delete from `board` where board_no = #{board_no}
	</delete>
</mapper>